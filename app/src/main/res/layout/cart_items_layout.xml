<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/cart_view_product_image"
            android:layout_width="85dp"
            android:layout_height="96dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:contentDescription="product"
            android:src="@drawable/product" />

        <TextView
            android:id="@+id/cart_view_product_name"
            android:layout_width="149dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="116dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/product_name_string"
            android:textColor="@color/product_name_color"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/cart_view_price"
            android:layout_width="53dp"
            android:layout_height="27dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="117dp"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:text="Price"
            android:textColor="@color/price_color"
            android:textSize="20sp" />

        <View
            android:id="@+id/rectangle_for_delete"

            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/rectangle_delete_icon"></View>

        <View
            android:id="@+id/rectangle_for_edit"
            android:layout_below="@+id/rectangle_for_delete"
            android:layout_width="60dp"
            android:layout_height="40dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"

            android:background="@drawable/rectangle_5_shape" />

        <ImageView
            android:id="@+id/cart_view_baseline_delete_white_18dp"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:contentDescription="baseline_delete_white_18dp"
            android:src="@drawable/baseline_delete_white_18dp" />

        <ImageView
            android:id="@+id/cart_view_edit_imageview"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"

            android:src="@drawable/edit_imageview" />

        <TextView
            android:id="@+id/cart_view_quantity"
            android:layout_width="91dp"
            android:layout_height="27dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="114dp"
            android:layout_marginTop="55dp"
            android:gravity="center"
            android:text="@string/quantity__string"
            android:textColor="@color/price_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/cart_view_show_quantity"
            android:layout_width="17dp"
            android:layout_height="27dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="214dp"
            android:layout_marginTop="55dp"
            android:gravity="center"
            android:text="@string/_1_string"
            android:textColor="@color/_1_color"
            android:textSize="20sp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>
